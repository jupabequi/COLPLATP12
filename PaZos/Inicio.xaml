<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PaZos.Inicio">
	<ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
     </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="15">
        
            <Button x:Name="translateButon" Text="Iniciar sesión"/>
            <Label Text="¿No tienes cuenta de PaZos?"  VerticalOptions="End" />
            <Button x:Name="callButton" Text="Crear cuenta" IsEnabled="false"  VerticalOptions="End" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
