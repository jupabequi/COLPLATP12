				</DatePicker>
				<DatePicker VerticalOptions="Center" AbsoluteLayout.LayoutBounds="230,280">
					<DatePicker.Format>yyyy-MM-dd</DatePicker.Format>
				</DatePicker>


				<Picker x:Name="pkTipoAhorro" Title="Tipo de ahorro" AbsoluteLayout.LayoutBounds="35,315"></Picker>

